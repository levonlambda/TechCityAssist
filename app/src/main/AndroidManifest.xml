<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechCityAssist">

        <!-- Main Activity with Splash Screen Theme -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TechCityAssist.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Image Management Activity (Admin) -->
        <activity
            android:name=".ImageManagementActivity"
            android:exported="false"
            android:label="Image Management"
            android:theme="@style/Theme.TechCityAssist" />

        <!-- Phone List Activity -->
        <activity
            android:name=".PhoneListActivity"
            android:exported="false"
            android:label="Device List"
            android:theme="@style/Theme.TechCityAssist" />

        <!-- Phone Detail Activity -->
        <activity
            android:name=".PhoneDetailActivity"
            android:exported="false"
            android:label="Phone Details"
            android:theme="@style/Theme.TechCityAssist" />

        <!-- Phone Comparison Activity -->
        <activity
            android:name=".PhoneComparisonActivity"
            android:exported="false"
            android:label="Compare Devices"
            android:theme="@style/Theme.TechCityAssist" />
    </application>

</manifest>